<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="true"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <!-- TITULO NOVA TAREFA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">
            <Button
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:tint="@color/gray"
                android:id="@+id/btnBackAddTask"
                android:drawableLeft="@drawable/ic_arrow_back_white_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Tarefa"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <!-- TITULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"
                android:textSize="18sp" />

            <!-- TITULO INPUT -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="5dp"
                app:cardElevation="20dp">
                <EditText
                    android:id="@+id/taskTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Digite o título"
                    android:textColorHint="@color/purple"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:paddingStart="15dp"/>
            </androidx.cardview.widget.CardView>

            <!-- NOTAS / DESCRICAO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notas/Descrição"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"
                android:textSize="18sp" />

            <!-- NOTAS INPUT -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="5dp"
                app:cardElevation="20dp">
                <EditText
                    android:id="@+id/taskNotas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Digite suas notas/descrição"
                    android:textColorHint="@color/purple"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:paddingStart="15dp"/>
            </androidx.cardview.widget.CardView>

            <!-- DEFINIR PRAZO TITULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Definir prazo"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"
                android:textSize="18sp" />

            <!-- HORARIO INICIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--INICIO HORA TEXTO-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Início:"
                    android:textColor="@color/purple"
                    android:textSize="16sp"/>

                <!--INICIO HORA INPUT-->
                <EditText
                    android:id="@+id/taskIniHora"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="hh:mm"
                    android:textColorHint="@color/purple"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:paddingStart="15dp"/>
            </LinearLayout>

            <!-- TERMINO HORARIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--FIM HORA TEXTO-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Término:"
                    android:textColor="@color/purple"
                    android:textSize="16sp" />
                <!--FIM HORA INPUT-->
                <EditText
                    android:id="@+id/taskFimHora"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="hh:mm"
                    android:textColorHint="@color/purple"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:layout_marginTop="20px"
                    android:layout_border="10px"
                    android:paddingStart="15dp"/>
            </LinearLayout>

            <!-- PRIORIDADE TITULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prioridade"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"
                android:textSize="18sp" />

            <!-- PRIORIDADE (ESCOLHER A OPCAO) -->
            <RadioGroup
                android:id="@+id/taskPrioridade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <!-- PRIORIDADE ALTA-->
                <RadioButton
                    android:id="@+id/taskAltaPrioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alta"
                    android:textColor="@color/purple"/>
                <!-- PRIORIDADE MEDIA -->
                <RadioButton
                    android:id="@+id/taskMediaPrioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Média"
                    android:textColor="@color/purple"/>
                <!-- PRIORIDADE BAIXA-->
                <RadioButton
                    android:id="@+id/taskBaixaPrioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baixa"
                    android:textColor="@color/purple"/>
            </RadioGroup>

            <!-- BOTOES EDITAR E EXCLUIR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">


                <Button
                    android:id="@+id/btnExcluirTarefa"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="70dp"
                    android:text="Excluir"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="12dp" />

                <Button
                    android:id="@+id/btnEditarTarefa"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Editar"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="12dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
