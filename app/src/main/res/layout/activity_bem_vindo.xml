<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bem_vindo_fundo"
    tools:context=".screens.splash_screens.Bem_vindo"
    android:orientation="vertical">

    <View
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/purple"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem - vindo(a)"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/purple"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apresentamos nosso aplicativo mais recente, cuidadosamente projetado para simplificar e aprimorar a gestão de suas tarefas diárias. Mantenha-se organizado, elimine o caos e alcance seus objetivos com facilidade!"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/purple"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Login"
            android:textSize="12sp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnLogin"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Cadastro"
            android:textSize="12sp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnRegister"/>
        
    </LinearLayout>


</LinearLayout>