<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.profile.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/circle_top_component">

        <Button
            android:id="@+id/btnBackAddTask"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:backgroundTint="@color/purple"
            android:drawableLeft="@drawable/ic_arrow_back_white_24"
            android:text="."
            android:textColor="@color/transparent" />

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/user_profile_gradient"
                android:src="@drawable/ic_launcher_foreground" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/backgroung_button">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_icon"
                    android:tooltipText="Editar foto"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Nome do usuÃ¡rio"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conta:"
            android:textColor="@color/purple"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:textColor="@color/green"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:padding="10dp"
            android:text="."
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textSize="15dp"
            android:textColor="@color/green"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:padding="10dp"
            android:text="."
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumo:"
            android:textColor="@color/purple"
            android:layout_marginTop="30dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:padding="10dp"
            android:text="."
            android:textColor="@color/green"
            app:cornerRadius="50dp" />


    </LinearLayout>

</LinearLayout>








